<%- include('./partials/header') %> 

<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
  <% if (user.cart && user.cart.length > 0) { %>
    <% user.cart.forEach(function(product) { %>
      <div class="w-[30%] rounded-md overflow-hidden">
        <!-- Product Image -->
        <div class="w-full flex justify-center items-center h-80 bg-[<%= product.bgcolor %>]">
          <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" class="h-[18rem]">
        </div>

        <!-- Product Name + Quantity -->
        <div class="w-full flex justify-between px-5 py-4 bg-[<%= product.textcolor %>]">
          <h3 class="text-2xl text-black-500"><%= product.name %></h3>
          <div class="flex items-center gap-2">
            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
          </div>
        </div>

        <!-- Product Price -->
        <div class="flex items-center justify-between px-5 py-3 bg-[<%= product.panelColor %>]">
          <h4 class="text-lg">Net Total</h4>
          <h2 class="text-lg">₹ <%= product.price %></h2>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <h2 class="text-xl text-gray-600">Your cart is empty</h2>
  <% } %>

  <!-- Price Breakdown Section -->
  <div class="w-[70%]">
    <h3 class="text-xl">Price Breakdown</h3>
    <div class="px-10 mt-5">
      <div class="flex mt-2">
        <h4 class="w-1/3">Total MRP</h4>
        <h4>₹ <%= user.cart.reduce((total, item) => total + item.price, 0) %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Discount on MRP</h4>
        <h4>₹ 0</h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Platform Fee</h4>
        <h4>₹ 20</h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Shipping Fee</h4>
        <h4>FREE</h4>
      </div>
    </div>

    <div class="w-full h-[1px] bg-black mt-10"></div>
    <div class="flex mt-5">
      <h3 class="w-1/3 text-xl">Total Amount</h3>
      <h3 class="font-semibold text-xl text-green-600">
        ₹ <%= user.cart.reduce((total, item) => total + item.price, 0) + 20 %>
      </h3>
    </div>
    <form action=""></form>
  </div>
</div>

<%- include('./partials/footer') %> 
